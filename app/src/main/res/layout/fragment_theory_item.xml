<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/theoryItemHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/light_gray"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="1. Свойства уравнений" />

        <WebView
            android:id="@+id/theoryHtmlView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/super_rect"
            android:elevation="4dp"
            android:padding="8dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/theoryItemErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_error"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/something_goes_wrong"
            android:textColor="@color/light_gray"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>