<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chatImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/img_movie_cast_1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/chatHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/chatImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chatHeader"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/light_gray"
        tools:text="Robert Downey Jr"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/chatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/chatImage"
        app:layout_constraintTop_toBottomOf="@id/chatHeader"
        android:layout_margin="8dp"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        tools:text="Avengers assemble!"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/updatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        tools:text="26.04.2019"/>


</androidx.constraintlayout.widget.ConstraintLayout>